       <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_progres_this_week"
        android:fontFamily="@font/roboto_light"
        android:layout_margin="16dp"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@+id/container"/>

    <ProgressBar
        android:id="@+id/thisWeekProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progress="0"
        android:progressBackgroundTint="@color/green_transparent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:indeterminate="false"/>

    <TextView
        android:id="@+id/pomodoroThisWeekTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_have_done"
        android:fontFamily="@font/roboto_light"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@+id/thisWeekProgress"/>

    <ProgressBar
        android:id="@+id/thisWeekTasksProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pomodoroThisWeekTv"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progressBackgroundTint="@color/green_transparent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:indeterminate="false"/>

    <TextView
        android:id="@+id/tasksThisWeekTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_have_done2"
        android:fontFamily="@font/roboto_light"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@+id/thisWeekTasksProgress"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:padding="4dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            android:layout_below="@+id/tasksThisWeekTv"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
